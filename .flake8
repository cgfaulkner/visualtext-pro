[flake8]
# Exclude backup/archival code from linting
exclude =
    .git,
    __pycache__,
    .venv,
    venv,
    env,
    .env,
    build,
    dist,
    *.egg-info,
    core/backup,
    old_project,
    archive,
    archive/*

# Line length (consistent with project style)
max-line-length = 100

# Ignore specific error codes if needed
# ignore = 
